{
    "compilerOptions": {
        "outDir": "./build/",
        "module": "commonjs",
        "target": "es6",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "plugins": [
            {
              "name": "tslint-language-service"
            }
        ],
        "strict": true,
        "esModuleInterop": true
    },
    "include": [
        "./app/**/*.ts"
    ],
    "exclude": [
        "node_modules"
    ]
}