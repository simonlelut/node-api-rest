{
   "compilerOptions": {
       "outDir": "./build/",
       "module": "commonjs",
       "target": "es6",
       "emitDecoratorMetadata": true,
       "experimentalDecorators": true,
       "allowJs": true,
       "plugins": [
           {
             "name": "tslint-language-service"
           }
       ],
       "esModuleInterop": true,
       "sourceMap": true
   },
   "include": [
       "./app/**/*.ts"
   ],
   "exclude": [
       "node_modules"
   ]
}